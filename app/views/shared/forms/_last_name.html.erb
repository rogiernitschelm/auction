<div class="form-field">
  <%= f.label t('activerecord.attributes.user.last_name'), class: 'form-label', for: :last_name %>
  <div class="form-input-grouped">
    <%= f.text_field :infix,
      placeholder: t('activerecord.attributes.user.infix_placeholder'),
      class: 'form-input-grouped-left with-validity-icon'
    %>

    <%= f.text_field :last_name,
      placeholder: t('activerecord.attributes.user.last_name_placeholder'),
      class: 'form-input-grouped-right with-validity-icon',
      id: :last_name,
      required: true,
      autocomplete: :off
    %>
  </div>
</div>
