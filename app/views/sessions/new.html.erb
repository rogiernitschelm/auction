  <div class="flex-container">
  <div class="form-container">
    <div class="form-header">
      <h3><%= t(:login) %></h3>
    </div>

    <%= form_with url: sessions_path, html: { class: "form" } do |f| %>
      <%= input_field(
          :email,
          autofocus: true,
          placeholder: t('activerecord.attributes.user.email_placeholder'),
          type: :text,
          f: f,
          id: :email
        )
      %>

      <%= input_field(
          :password,
          type: 'password',
          placeholder: t('activerecord.attributes.user.password_placeholder'),
          id: :password,
          f: f
        )
      %>

      <div class="form-split"></div>

      <%= render partial: 'shared/forms/submit', locals: { f: f, text: t(:login) } %>
      <%= render partial: 'shared/forms/alt_submit', locals: { alt_path: new_registration_path, text: t(:no_account) } %>
    <% end %>
  </div>
</div>
