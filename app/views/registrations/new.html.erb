<div class="flex-container">
  <div class="form-container">
    <div class="form-header">
      <h3><%= t(:register) %></h3>
    </div>

    <% if flash[:error] %>
      <div class="form-flash-error">
        <%= flash[:error] %>
      </div>
    <% end %>

    <%= form_with url: registrations_path, local: true, html: { class: "form" } do |f| %>

      <%= render partial: 'shared/forms/first_name', locals: { f: f, autofocus: true, value: first_name } %>
      <%= render partial: 'shared/forms/last_name', locals: { f: f, value: { infix: infix, last_name: last_name } } %>
      <%= render partial: 'shared/forms/email', locals: { f: f, value: email, id: :email } %>
      <%= render partial: 'shared/forms/usertype', locals: { f: f, value: usertype } %>

      <div class="form-split"></div>

      <%= render partial: 'shared/forms/password', locals: { f: f, value: password, id: :password } %>
      <%= render partial: 'shared/forms/password_confirmation', locals: { f: f, value: password_confirmation } %>

      <div class="form-split"></div>

      <%= render partial: 'shared/forms/submit', locals: { f: f, text: t(:signup) } %>
      <%= render partial: 'shared/forms/alt_submit', locals: { alt_path: new_session_path, text: t(:have_account) } %>
    <% end %>
  </div>
</div>
